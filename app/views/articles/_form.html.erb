<div class="container">
<div class="row justify-content-center mt-3">
  <div class="col-10">
    <%= render 'shared/errors' %>
    <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-white rounded", local: true) do |f| %>
      <div class="form-group row justify-content-center">
        <%= f.label :title, class: "col-2 form-label text-dark"%>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control bg-light shadow rounded", placeholder: "Title of article"%>
        </div>
      </div>
      <div class="form-group row justify-content-center mt-3">
        <%= f.label :description, class: "col-2 form-label text-dark"%>
        <div class="col-10">
        <%= f.text_area :description, rows: 10, class: "form-control bg-light shadow rounded", placeholder: "Description of article"%>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-dark col-3 mt-3" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <%= link_to '[ Cancel and Return ]', articles_path, class: "text-dark text-center" %> 
  </div>
</div>